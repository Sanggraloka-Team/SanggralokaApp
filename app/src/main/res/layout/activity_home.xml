<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/kawahputih"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cobain wisata terpopuler di"
        android:paddingLeft="45dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="15dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bandung"
        android:paddingLeft="45dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="15dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <androidx.cardview.widget.CardView
            android:layout_width="81dp"
            android:layout_height="95dp"
            android:layout_marginLeft="45dp"
            app:cardBackgroundColor="@color/lilac">

            <ImageView
                android:layout_width="82dp"
                android:layout_height="95dp"
                android:src="@drawable/sample"
                android:layout_marginBottom="10dp"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:text="Floating market"
                android:textAlignment="center"
                android:textSize="8dp"
                android:textColor="@color/black"/>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="81dp"
            android:layout_height="95dp"
            android:layout_marginLeft="40dp"
            app:cardBackgroundColor="@color/lilac"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:src="@drawable/cimory_land" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:text="CimoryLand"
                android:textAlignment="center"
                android:textSize="8dp"
                android:textColor="@color/black"
                />


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="81dp"
            android:layout_height="95dp"
            android:layout_marginLeft="40dp"
            app:cardBackgroundColor="@color/lilac">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:src="@drawable/orchid_forest_cikole" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="75dp"
                android:text="Orchid Forest"
                android:textAlignment="center"
                android:textSize="8dp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="82dp"
                android:text="Cikole"
                android:textAlignment="center"
                android:textSize="8dp"
                android:textColor="@color/black"/>


        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kulineran di Bandung"
        android:layout_marginTop="10dp"
        android:paddingLeft="45dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="15dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <androidx.cardview.widget.CardView
            android:layout_width="81dp"
            android:layout_height="95dp"
            android:layout_marginLeft="45dp"
            app:cardBackgroundColor="@color/lilac">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:src="@drawable/dapoer_pandan_wangi"
                android:layout_marginBottom="10dp"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="75dp"
                android:text="Dapoer Pandan"
                android:textAlignment="center"
                android:textSize="8dp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="82dp"
                android:text="Wangi"
                android:textAlignment="center"
                android:textSize="8dp"
                android:textColor="@color/black"/>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="81dp"
            android:layout_height="95dp"
            android:layout_marginLeft="40dp"
            app:cardBackgroundColor="@color/lilac"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:src="@drawable/burgereens" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:text="Burgreens"
                android:textAlignment="center"
                android:textSize="8dp"
                android:textColor="@color/black"
                />


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="81dp"
            android:layout_height="95dp"
            android:layout_marginLeft="40dp"
            app:cardBackgroundColor="@color/lilac">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:src="@drawable/sapulidi" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:text="Sapulidi"
                android:textAlignment="center"
                android:textSize="8dp"
                android:textColor="@color/black"/>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pusat perbelanjaan yang wajib dikunjungi"
        android:layout_marginTop="10dp"
        android:paddingLeft="45dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="15dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <androidx.cardview.widget.CardView
            android:layout_width="81dp"
            android:layout_height="95dp"
            android:layout_marginLeft="45dp"
            app:cardBackgroundColor="@color/lilac">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:src="@drawable/jalan_dago"
                android:layout_marginBottom="10dp"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:text="Jalan Dago"
                android:textAlignment="center"
                android:textSize="8dp"
                android:textColor="@color/black"/>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="81dp"
            android:layout_height="95dp"
            android:layout_marginLeft="40dp"
            app:cardBackgroundColor="@color/lilac"
            >

            <ImageView
                android:layout_width="82dp"
                android:layout_height="95dp"
                android:src="@drawable/sample"
                android:layout_marginBottom="10dp"
                android:paddingBottom="20dp"
                android:paddingTop="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:text="Paris Van Java"
                android:textAlignment="center"
                android:textSize="8dp"
                android:textColor="@color/black"
                />


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="81dp"
            android:layout_height="95dp"
            android:layout_marginLeft="40dp"
            app:cardBackgroundColor="@color/lilac">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:src="@drawable/the_secret" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:text="The Secret"
                android:textAlignment="center"
                android:textSize="8dp"
                android:textColor="@color/black"/>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>

