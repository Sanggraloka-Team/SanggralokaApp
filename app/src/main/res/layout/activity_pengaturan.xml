<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PengaturanActivity">

    <TextView
        android:id="@+id/textview_pengaturan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:text="Pengaturan"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edittext_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:textColorHint="@color/black" />

    <EditText
        android:id="@+id/edittext_ubah_kata_sandi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ubah kata sandi"
        android:textColorHint="@color/black" />

    <EditText
        android:id="@+id/edittext_nomor_ponsel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nomor ponsel"
        android:textColorHint="@color/black" />

    <EditText
        android:id="@+id/edittext_jenis_kelamin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Jenis kelamin"
        android:textColorHint="@color/black" />

    <EditText
        android:id="@+id/edittext_tanggal_lahir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tanggal lahir"
        android:textColorHint="@color/black" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_simpan_pengaturan"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="155dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_bg"
        android:gravity="center"
        android:text="Simpan"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="halo">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

</LinearLayout>