<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfileActivity">

    <ImageView
        android:id="@+id/photo_edit_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/profil" />

    <TextView
        android:id="@+id/ubahFoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ubah foto"
        android:layout_below="@id/photo_edit_profile"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="15sp"
        />

    <EditText
        android:id="@+id/txtNamaAnda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ubahFoto"
        android:layout_centerInParent="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="86dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/grey_line"
        android:gravity="center"
        android:hint="Hi, Nama Anda!"
        android:paddingVertical="6pt"
        android:textColor="@color/grey"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtsatu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtNamaAnda"
        android:text="Ini dapat menjadi nama depan atau nama panggilan. Ini adalah bagaimana"
        android:textSize="10sp"
        android:textAlignment="center"
        android:paddingTop="5dp"
        android:textColor="@color/grey_txt"/>
    <TextView
        android:id="@+id/txtdua"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtsatu"
        android:text="anda akan muncul di Sanggraloka."
        android:textSize="10sp"
        android:textAlignment="center"
        android:textColor="@color/grey_txt"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSimpan"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtdua"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="155dp"
        android:background="@drawable/button_bg"
        android:gravity="center"
        android:text="Simpan"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="20sp" />
</RelativeLayout>